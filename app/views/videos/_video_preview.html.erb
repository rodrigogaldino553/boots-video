<div id="<%= dom_id video %>">
  <div class="card">
    <% if video.content.attached? %>
      <video controls="true" poster="<%= url_for video.thumbnail if video.thumbnail.present? %>" width="100%" height="300px" preload="metadata" controlslist="nodownload">
        <source src="<%= rails_blob_url(video.content) %>" type="<%= video.content.content_type %>"></source>
      </video>
    <% end %>

  <div class="card-body">
    <h5 class="card-title"><%= video.title %></h5>
    <p class="card-text"><%= video.description[..20] %></p>
    <p class="card-text"><small class="text-muted"><%= time_ago_in_words(video.created_at) %></small></p>
  </div>
</div>
